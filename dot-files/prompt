PS1='%F{30}(%~)%f %$'
precmd() { RPROMPT=$(setRightPrompt) }

GCLOUD_ENABLED=1

function setRightPrompt {
	if git rev-parse --is-inside-work-tree &>/dev/null; then
		local branch="%F{53}($(git rev-parse --abbrev-ref HEAD 2>/dev/null))%f"
		echo "$branch"
	elif [ "$GCLOUD_ENABLED" -eq 0 ]; then
		local context="%F{33}($(gcloud config get-value project))%f"
		echo "$context"
	else
		local time="%F{55}($(date +"%H:%M:%S"))%f"
		echo "$time"
	fi
}

alias python=python3	

